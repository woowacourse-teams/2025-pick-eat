<configuration>
    <property name="CONSOLE_LOG_PATTERN"
              value="[%d{yyyy-MM-dd HH:mm:ss,Asia/Seoul}] %magenta([local]) %green([%thread]) %highlight(%-5level) %boldWhite([%C.%M:%yellow(%L)]) %yellow([request_id=%X{request_id}]) - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>