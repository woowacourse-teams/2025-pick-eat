{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  "stylelint.validate": [
    "css",
    "scss",
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact",
    "postcss"
  ],
  "stylelint.configFile": "stylelint.config.js",
  "stylelint.packageManager": "npm",

  "stylelint.customSyntax": "postcss-styled-syntax",
  "editor.formatOnSave": true
}