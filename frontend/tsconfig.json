{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["shared/components/*"],
      "@hooks/*": ["shared/hooks/*"],
      "@types/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"],
      "@domains/*": ["domains/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
